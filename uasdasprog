#include <iostream>
#include <string>
using namespace std;

int kj, n[999][6], jml; 
string nm[999];

void it(){ 
	
	cout<<endl;
	cout<<"Jurusan Teknik Informatika"<<endl;
	cout<<"==============================="<<endl;
	cout<<endl;
	
	cout<<"Masukkan Jumlah Mahasiswa : ";
	cin>>jml;
	for(int i=0; i<jml; i++){
	cout<<"Data Mahasiswa Ke-"<<i+1<<endl;
	cout<<"NIM : ";
	cin>>n[i][0];
	cout<<"Nama : ";
	cin>>nm[i];
	cout<<"Masukkan Nilai Skala 1-100 : \n";
	cout<<"Dasar Pemrograman : ";
	cin>>n[i][1];
	cout<<"Struktur Data : ";
	cin>>n[i][2];
	cout<<"Algoritma Pemrograman : ";
	cin>>n[i][3];
	cout<<"Rekayasa Perangkat Lunak :";
	cin>>n[i][4];
	cout<<endl;	
	}
	
	cout<<"DATA ANDA"<<endl;
	cout<<"================================"<<endl;
	for(int i=0; i<jml; i++){
	cout<<"Data Mahasiswa Ke-"<<i+1<<endl;
	cout<<"NIM : "<<n[i][0]<<endl;
	cout<<"Nama : "<<nm[i]<<endl;
	cout<<"Masukkan Nilai Skala 1-100 : \n";
	cout<<"Dasar Pemrograman : "<<n[i][1]<<endl;
	cout<<"Struktur Data : "<<n[i][2]<<endl;
	cout<<"Algoritma Pemrograman : "<<n[i][3]<<endl;
	cout<<"Rekayasa Perangkat Lunak :"<<n[i][4]<<endl;
	cout<<"Rata-Rata Nilai Akhir : "<<(n[i][2]+n[i][3]+n[i][4]+n[i][1])/4<<endl;
	cout<<endl;
	}
}

void ik(){ 
	
	cout<<endl;
	cout<<"Jurusan Ilmu Komputer"<<endl;
	cout<<"==============================="<<endl;
	cout<<endl;
	
	cout<<"Masukkan Jumlah Mahasiswa : ";
	cin>>jml;
